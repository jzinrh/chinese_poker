  <div class="{{suit.name}} card-four">
    <div class="corner top">
      <span class="number">4</span>
      <span>{{{suit.symbol}}}</span>
    </div>
    <span class="suit top_left">{{{suit.symbol}}}</span>
    <span class="suit top_right">{{{suit.symbol}}}</span>
    <span class="suit bottom_left">{{{suit.symbol}}}</span>
    <span class="suit bottom_right">{{{suit.symbol}}}</span>
    <div class="corner bottom">
      <span class="number">4</span>
      <span>{{{suit.symbol}}}</span>
    </div>
  </div>
</div>